<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 

    <description>
      Online Hotel Management Service
    </description>
    <display-name>Online Hotel Management Service</display-name>

	<!-- servlet names and classes -->
    <servlet>
      <servlet-name>exampleServlet</servlet-name>
      <servlet-class>controllers.exampleServlet</servlet-class>
    </servlet>
	<servlet>
      <servlet-name>testServlet</servlet-name>
      <servlet-class>controllers.testServlet</servlet-class>
    </servlet>
	
	<servlet>
      <servlet-name>loginServlet</servlet-name>
      <servlet-class>controllers.loginServlet</servlet-class>
    </servlet>
	<servlet>
      <servlet-name>registerServlet</servlet-name>
      <servlet-class>controllers.registerServlet</servlet-class>
    </servlet>
	<servlet>
      <servlet-name>editAccountServlet</servlet-name>
      <servlet-class>controllers.editAccountServlet</servlet-class>
    </servlet>
	
	<servlet>
      <servlet-name>createRoomServlet</servlet-name>
      <servlet-class>controllers.createRoomServlet</servlet-class>
    </servlet>
	<servlet>
      <servlet-name>editRoomServlet</servlet-name>
      <servlet-class>controllers.editRoomServlet</servlet-class>
    </servlet>
	
	
	<!-- servlet URL mapping -->
    <servlet-mapping>
        <servlet-name>exampleServlet</servlet-name>
        <url-pattern>/example.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>testServlet</servlet-name>
        <url-pattern>/test.html</url-pattern>
    </servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editAccountServlet</servlet-name>
        <url-pattern>/editaccount.html</url-pattern>
    </servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>createRoomServlet</servlet-name>
        <url-pattern>/createroom.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editRoomServlet</servlet-name>
        <url-pattern>/editroom.html</url-pattern>
    </servlet-mapping>

</web-app>
