<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">

    <description>
      Online Hotel Management Service
    </description>
    <display-name>Online Hotel Management Service</display-name>

	<!-- servlet names and classes -->
    <servlet>
      <servlet-name>exampleServlet</servlet-name>
      <servlet-class>controllers.exampleServlet</servlet-class>
    </servlet>
	<servlet>
      <servlet-name>testServlet</servlet-name>
      <servlet-class>controllers.testServlet</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>loginServlet</servlet-name>
      <servlet-class>controllers.loginServlet</servlet-class>
    </servlet>
	<servlet>
      <servlet-name>registerServlet</servlet-name>
      <servlet-class>controllers.registerServlet</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>homeServlet</servlet-name>
      <servlet-class>controllers.homeServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>roomServlet</servlet-name>
      <servlet-class>controllers.roomServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>bookingServlet</servlet-name>
      <servlet-class>controllers.bookingServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>accountServlet</servlet-name>
      <servlet-class>controllers.accountServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>billServlet</servlet-name>
      <servlet-class>controllers.billServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>reportServlet</servlet-name>
      <servlet-class>controllers.reportServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>extrasServlet</servlet-name>
      <servlet-class>controllers.extrasServlet</servlet-class>
    </servlet>
	<!-- servlet URL mapping -->
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/home.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>exampleServlet</servlet-name>
        <url-pattern>/example.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>testServlet</servlet-name>
        <url-pattern>/hotel/test.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>accountServlet</servlet-name>
        <url-pattern>/account.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>roomServlet</servlet-name>
        <url-pattern>/room.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>billServlet</servlet-name>
        <url-pattern>/bill.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>reportServlet</servlet-name>
        <url-pattern>/report.html</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>extrasServlet</servlet-name>
        <url-pattern>/extras.html</url-pattern>
    </servlet-mapping>


	<servlet-mapping>
		<servlet-name>bookingServlet</servlet-name>
		<url-pattern>/bookings.html</url-pattern>
	</servlet-mapping><servlet-mapping>
		<servlet-name>bookingServlet</servlet-name>
		<url-pattern>/*/bookings.html</url-pattern>
    </servlet-mapping>
</web-app>
